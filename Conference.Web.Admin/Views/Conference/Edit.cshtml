@model Conference.ConferenceInfo
@{
    ViewBag.Title = "编辑会议";
    ViewBag.PageType = "page_create-conf";
}

@section Navigation {
    <div class="quick__login">@Model.OwnerName</div>
}

@section PageNavigation {
    @Html.Partial("Navigation")
}

<h1 class="page__head page__wrapper">编辑会议</h1>
<div class="page__content">
    <div class="page__wrapper content-main_create-conf">
        @using (Html.BeginForm()) {
            <div class="content-main__wrapper">
                <div class="content-main__main">
                    <div class="content-main__header">发起人信息</div>
                    <fieldset class="content">
                        <div class="form__fieldset">
                            <label>发起人</label>
                            <div class="form__field">
                                <pre>@Model.OwnerName</pre>
                            </div>
                        </div>
                        <div class="form__fieldset">
                            <label>邮箱</label>
                            <div class="form__field">
                                <pre>@Model.OwnerEmail</pre>
                            </div>
                        </div>
                        <div class="form__fieldset">
                            <label>访问码</label>
                            <div class="form__field">
                                <pre>@Model.AccessCode</pre>
                            </div>
                        </div>
                        <div class="g-clear"></div>
                    </fieldset>
                    <div class="content-main__header">会议信息</div>
                    <fieldset class="content">
                        <div class="form">
                            <div class="form__fieldset">
                                @Html.LabelFor(model => model.Name, "主题：*")
                                <div class="form__field">
                                    @Html.TextBoxFor(model => model.Name)
                                </div>
                            </div>
                            <div class="form__fieldset">
                                @Html.LabelFor(model => model.Tagline, "标签：")
                                <div class="form__field">
                                    @Html.TextBoxFor(model => model.Tagline)
                                </div>
                            </div>
                            <div class="form__fieldset">
                                <label>会议编码(Slug)</label>
                                <div class="form__field">
                                    <pre>@Model.Slug</pre>
                                </div>
                            </div>
                            <div class="form__fieldset">
                                @Html.LabelFor(model => model.Location, "地址：")
                                <div class="form__field">
                                    @Html.TextBoxFor(model => model.Location)
                                </div>
                            </div>
                            <div class="form__fieldset">
                                @Html.LabelFor(model => model.TwitterSearch, "推特：")
                                <div class="form__field">
                                    @Html.TextBoxFor(model => model.TwitterSearch)
                                </div>
                            </div>
                            <div class="form__fieldset">
                                @Html.LabelFor(model => model.Description, "描述：")
                                <div class="form__field">
                                    @Html.TextAreaFor(model => model.Description)
                                </div>
                            </div>
                            <div class="g-clear"></div>
                        </div>
                        <div class="form">
                            <div class="form__fieldset">
                                @Html.LabelFor(model => model.StartDate, "开始日期：*")
                                @Html.Hidden("StartDate", Model != null ? Model.StartDate.ToString("yyyy-MM-dd") : null, new { @class = "inline-datepicker" })
                            </div>
                            <div class="form__fieldset">
                                @Html.LabelFor(model => model.EndDate, "结束日期：*")
                                @Html.Hidden("EndDate", Model != null ? Model.EndDate.ToString("yyyy-MM-dd") : null, new { @class = "inline-datepicker" })
                            </div>
                            <div class="g-clear"></div>
                        </div>
                    </fieldset>
                    <div class="nav content-main__nav">
                        <a class="nav__left" href="@Url.Action("Index")">取消</a>
                        <button class="nav__right">保存会议</button>
                    </div>
                </div>
            </div>
            <div class="g-clear"></div>
        }
    </div>
</div>
