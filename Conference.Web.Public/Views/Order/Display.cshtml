@model Registration.ReadModel.PricedOrder
@{
    ViewBag.Title = "登记";
}

<h1 class="page__head page__wrapper">注册详情</h1>
<div class="page__content">
    <div class="page__wrapper content-main content-main_assignseats">
        <div class="content-main__wrapper">
            <div class="content-main__main">
                <div class="content-main__header">订单详情</div>
                <div class="content">
                    @Html.Partial("_OrderDetails", this.Model)
                </div>
                
                <div class="g-clear"></div>
                <div class="nav content-main__nav">
                    <a class="nav__right" href="@(Model.AssignmentsId.HasValue?Url.Action("AssignSeats", new{assignmentsId = Model.AssignmentsId, orderId = Model.OrderId}):Url.Action("AssignSeatsForOrder", new {orderId = Model.OrderId}))">
                        席位分配
                    </a>
                </div>
            </div>
        </div>
        <div class="g-clear"></div>
    </div>
</div>

